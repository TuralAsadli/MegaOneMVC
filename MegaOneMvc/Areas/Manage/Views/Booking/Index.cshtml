@using MegaOneMvc.ViewModels.Booking

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


@model IEnumerable<GetBookingVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <p class="card-description">
                <a type="button" asp-action="CreateCategory" asp-controller="Category" class="btn btn-success">Create</a>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Hour
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Update
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Date
                                </td>
                                <td>
                                    @item.Hour
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    <a type="button" asp-route-id="@item.Id" asp-action="DeleteBooking" asp-controller="Booking" class="btn btn-danger">Delete</a>
                                </td>
                                <td>
                                    <a type="button" asp-route-id="@item.Id" asp-action="UpdateBooking" asp-controller="Booking" class="btn btn-warning">Warning</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
