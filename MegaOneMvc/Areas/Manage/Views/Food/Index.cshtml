@{
}
@model IEnumerable<GetFoodVM>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <p class="card-description">
                <a type="button" asp-action="CreateFood" asp-controller="Food" class="btn btn-success">Create</a>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Category Name
                            </th>
                            <th>
                                Delete
                            </th>
                            <th>
                                Update
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.FoodName
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.Category.CategoryName
                                </td>

                                <td>
                                    <a type="button" asp-route-id="@item.Id" asp-action="DeleteFood" asp-controller="Food" class="btn btn-danger">Delete</a>
                                </td>
                                <td>
                                    <a type="button" asp-route-id="@item.Id" asp-action="UpdateFood" asp-controller="Food" class="btn btn-warning">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>