@{
}
@model CreateCategoryCommand

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="CategoryName">Name</label>
                    <input asp-for="CategoryName" type="text" class="form-control"  placeholder="Name">
                    <span asp-validation-for="CategoryName"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="IconName">Name</label>
                    <input asp-for="IconName" type="text" class="form-control" placeholder="Icon">
                    <span asp-validation-for="IconName"></span>
                </div>
                
                
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>