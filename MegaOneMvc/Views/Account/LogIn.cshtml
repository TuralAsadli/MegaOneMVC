@{
    Layout = "_AccountLayout";
}

@model UserLogInVM

<div class="auth-form-light text-left py-5 px-4 px-sm-5">
    <div class="brand-logo">
        <img src="~/area/images/logo.svg" alt="logo">
    </div>
    <h4>Hello! let's get started</h4>
    <h6 class="font-weight-light">Sign in to continue.</h6>
    <form method="post" class="pt-3">
        <div class="form-group">
            <input asp-for="UserName" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mt-3">
            <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN IN</button>
        </div>
    </form>
</div>
